<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F2F3"
    tools:context=".ProductFullView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#ffff" />

        <TextView
            android:id="@+id/cat_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Product Details"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/profile_edit"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/edit"
            app:tint="@color/white"
            android:textColor="@color/black" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:background="@drawable/background7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IVPreviewImage"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/squre"
                    android:src="@drawable/gallery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/giftname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personalized Best Dad LED Lamp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textSize="20dp"/>


                    <TextView
                        android:id="@+id/giftcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father's Day, Mother's Day, Women's Day,Children day, Common "
                        android:layout_gravity="left"
                        android:background="@drawable/background10"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/giftgender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Men, Women, Kids, For all"
                        android:layout_gravity="left"
                        android:background="@drawable/background10"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                    <TextView
                        android:id="@+id/giftprize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="825"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/offerprize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="750"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/white"
                        android:textSize="22dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                <TextView
                    android:id="@+id/offerpercen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="offer percentage"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="The new venture A Gift Story focus on gifting business, both online and offline, and will try to provide a platform to the survivors who were earlier working on the Sheroes Craft Project from distance. The new venture has a potential to accommodate all the acid attack survivors working at cafe Shreroes Hangout and open an opportunity to at least for thirty more survivors by the end of the year 2021. Every gift is curated with abundance of love and fascinating story. All we would like to say is Everything's is a story- You are the story- I am a story: We are 'A GIFT STORY'. We are working hard to deliver the gifts from ours to your loved ones"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>