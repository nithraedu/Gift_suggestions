<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Product Details Edit"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!-- <TextView
             android:id="@+id/myproduct"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:padding="5dp"
             android:background="@color/gray_light"
             android:gravity="center"
             android:text="My product"
             android:textColor="@color/white"
             android:textSize="15dp" />-->

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/IVPreviewImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/blood_donor_lib_lighest"
                android:src="@drawable/logo_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/giftname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GiftName"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/giftcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GiftCategory"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/giftgender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giftgender"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/giftprize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gift prize"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/offerprize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offerprize"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/offerpercen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="offer percentage"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gift Description"
                    android:padding="20dp"
                    android:background="@drawable/background4"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>